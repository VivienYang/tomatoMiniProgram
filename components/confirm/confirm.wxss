/* componets/confirm/confirm.wxss */
.mask{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0,0,0,0.5);
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.mask > .modal{
  width: 640rpx;
  padding: 26rpx 20rpx;
  background: #ffffff;
  margin: 100rpx auto;
  border-radius: 15rpx;
}
.mask > .modal > textarea{
  width:600rpx;
  padding: 10rpx;
  height: 80rpx;
  margin: 20rpx auto;
  background: #F2F2F2;
  border-radius: 10rpx;
}
.mask > .modal > .btn_group{
  width:600rpx;
  line-height: 50rpx;
  padding: 15rpx 0 5rpx;
  margin: 0 auto;
  display: flex;
}
.mask > .modal > .btn_group > text{
  flex: 1;
  text-align: center;
  color: #737373;
  letter-spacing: 0.5;
}
.mask > .modal > .btn_group > text.sure{
  color: #F6705A;
}
.mask > .modal > .btn_group > text:nth-child(2){
  border-left: 2rpx solid #F6705A;
}